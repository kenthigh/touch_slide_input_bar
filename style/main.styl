@font-face
  font-family: "Quattrocento"
  src url('../fonts/Quattrocento/Quattrocento-Regular.ttf')
  font-weight normal

@font-face
  font-family: "Quattrocento"
  src url('../fonts/Quattrocento/Quattrocento-Bold.ttf')
  font-weight bold

@font-face
  font-family: "Quattrocento Sans"
  src url('../fonts/Quattrocento_Sans/QuattrocentoSans-Regular.ttf')
  font-weight normal
  font-style normal

@font-face
  font-family: "Quattrocento Sans"
  src url('../fonts/Quattrocento_Sans/QuattrocentoSans-Italic.ttf')
  font-weight normal
  font-style italic

@font-face
  font-family: "Quattrocento Sans"
  src url('../fonts/Quattrocento_Sans/QuattrocentoSans-Bold.ttf')
  font-weight bold
  font-style normal

@font-face
  font-family: "Quattrocento Sans"
  src url('../fonts/Quattrocento_Sans/QuattrocentoSans-BoldItalic.ttf')
  font-weight bold
  font-style italic

body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td
  margin 0
  padding 0
*
  box-sizing: border-box

body
  background-color: #A993FF
  font-family: Quattrocento


.headings_normal
  font-family "Quattrocento"
  font-weight normal
  font-size 30px

.headings_bold
  font-family "Quattrocento"
  font-weight bold


.sans_normal_norml
  font-family "Quattrocento Sans"
  font-style normal
  font-weight normal

.sans_normal_bold
  font-family "Quattrocento Sans"
  font-style normal
  font-weight bold

.sans_italic_normal
  font-family "Quattrocento Sans"
  font-style italic
  font-weight normal

.sans_italic_bold
  font-family "Quattrocento Sans"
  font-style italic
  font-weight bold

.clearfix:before,
.clearfix:after
    content ""
    display table
.clearfix:after
    clear both
    overflow hidden
.clearfix
    zoom 1

.container
  max-width 1000px
  margin 0 auto

.top_bar
  width 100%
  height 120px

.uni_logo
  float left
  line-height 120px

.menu
  float right
  height 100%

.menu_item
  display inline-block
  vertical-align middle
  width 80px
  height 120px
  line-height 120px
  text-align center
  cursor pointer
  &:hover
    background-color #9a55b2

.banner
  width 100%
  position relative
  img
    width 100%

.mirror
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background linear-gradient(to bottom, rgba(0,0,0,0.65) 0%, rgba(0,0,0,0) 100%)

.banner_img
  width 100%

.slogan_box
  position absolute
  top 120px
  left 39px
  width 90%
  color #fff
  transition all 0.3s
  opacity 1

.slogan
  font-family "Quattrocento"
  font-size 38px
  margin-bottom 10px
  font-weight bold

.slogan_description
  font-family "Quattrocento Sans"
  font-size 20px
  font-weight normal

.twins_picture_section
  width 100%
  margin-top 20px

.twin_item
  width 49%
  display inline-block
  vertical-align top
  background-color #791b99
  &:nth-child(1)
    margin-right 1%
  &:nth-child(2)
    margin-left 1%
  img
    width 100%

.twin_description
  padding 30px 20px
  font-family "Quattrocento Sans"
  font-style italic
  font-size 16px
  line-height 25px
  color #fff

.right-side-section
  margin-top 20px
  width 100%
  background-color #791b99
  position relative

.right-side-img-box
  width 30%
  display inline-block
  vertical-align  middle
  margin-bottom -4px

.right-side-img
  width 100%

.quote_box
  width 70%
  display inline-block
  vertical-align  middle
  position relative
  padding 0 20px

.quote_text
  font-family "Quattrocento"
  font-size 32px
  font-weight bold
  width 100%
  color #ffffff
  margin-bottom 11px

.quote_attribute
  font-family "Quattrocento Sans"
  color #ffffff
  font-size 28px
  font-weight normal
  font-style italic
  position absolute
  right 20px

.trible_picture_section
  width 100%
  margin-top 20px

.trible_item
  width 32%
  display inline-block
  vertical-align top
  background-color #791b99
  padding-bottom 10px
  &:nth-child(1)
    margin-right 1%
  &:nth-child(2)
    margin-left 1%
    margin-right 1%
  &:nth-child(3)
    margin-left 1%
  img
    width 100%

.trible_title
  color #fff
  font-family "Quattrocento"
  font-size 18px
  line-height 22px
  padding 0 10px
  margin 10px 0 10px 0

.trible_des
  color #fff
  font-family "Quattrocento Sans"
  font-size 14px
  line-height 20px
  padding 0 10px

.footer
  max-width 1000px
  margin 20px auto 0 auto
  height 120px
  background-color #791b99
  position relative

.foot_menu
  display inline-block
  padding 20px 20px

.foot_menu_item
  color #000000
  display block
  margin-toxx1p 10px

.foot_logo
  position absolute
  right 10px
  bottom 10px

.split_line
  width 100%
  height 1px
  background-color #000000
  margin 20px 0 40px 0

.study_title
  font-family "Quattrocento"
  font-weight bold
  font-size 40px

.study_content_box
  margin-top 40px

.study_item_container
  width 100%
  height 400px
  position relative
  margin-bottom 20px

.img_left_hold
  width 480px
  height 360px
  img
    width 100%
    margin-bottom -4px

.img_right_hold
  width 480px
  height 360px
  float right
  img
    width 100%
  

.study_item_content_title
  font-family "Quattrocento"
  font-weight bold
  width 30%
  font-size 40px
  &.right
    position absolute
    right 20px
    top 40px
    text-align right
  &.left
    padding 40px 0 0 20px
    float left

.study_item_content
  font-family "Quattrocento Sans"
  font-weight normal
  font-size  24px
  width 40%
  &.right
    position absolute
    right 20px
    top 100px
    text-align right
  &.left
    padding 10px 0 0 20px
    float left




@media only screen and (max-width: 750px)
  .container
    width 100%
    padding 0 20px

  .headings_normal
    font-size 16px

  .slogan_box
    left 10px

  .twins_picture_section
    width 100%

  .twin_item
    width 100%
    margin-bottom 20px
    &:nth-child(1)
      margin-right 0
    &:nth-child(2)
      margin-left 0
  
  .trible_item
    width 100%
    margin-bottom 20px
    &:nth-child(1)
      margin-right 0
    &:nth-child(2)
      margin-left 0
      margin-right 0
    &:nth-child(3)
      margin-left 0

  .right-side-section
    margin-top 10px

  .right-side-img-box
    display none
  
  .right-side-section
    // background-color transparent

  .quote_box
    width 100%
    padding 20px 0 50px 20px

  .img_left_hold
    width 100%
    height auto
    img
      width 100%
      margin-bottom 20px

  .img_right_hold
    width 100%
    height auto
    img
      width 100%
      margin-bottom 20px

  .study_item_container
    width 100%
    height auto
    position relative
    margin-bottom 40px
    
  .study_item_content_title
    font-weight bold
    width 90%
    font-size 40px
    margin-bottom 10px
    &.right
      position relative
      text-align left
      right 0
      top 0
    &.left
      padding 0
      float initial

  .study_item_content
    font-weight normal
    font-size 24px
    width 90%
    &.right
      position relative
      text-align left
      right 0
      top 0
    &.left
      padding 0
      float initial
